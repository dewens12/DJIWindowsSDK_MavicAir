<Page
    x:Class="WSDKTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WSDKTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid x:Name="RootGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Padding="5">
                <TextBlock FontSize="36" Style="{StaticResource TitleTextBlockStyle}"> FPV</TextBlock>
                <TextBlock Style="{StaticResource BodyTextBlockStyle}" x:Name="result"></TextBlock>
            </StackPanel>

            <Image x:Name="fpvImage" Stretch="UniformToFill" Visibility="Visible" Grid.Row="1" Margin="0, 10, 0, 0" />
        </Grid>
    </Grid>
</Page>
